{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"**/*.spec.ts",
		"**/*.d.ts"
	]
}